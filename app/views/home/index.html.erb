<div class="container col-xl-10 col-xxl-8 px-4 py-5">
  <div class="row align-items-center g-lg-5 py-5">
    <div class="col-lg-7 text-center text-lg-start">
      <h1 class="display-4 fw-bold lh-1 mb-3"> <%= t("global.hero.title") %> </h1>
      <p class="col-lg-10 fs-4"> <%= t("global.hero.sub_title") %></p>
      <div role="search">
        <%= search_form_for @q, class: "row g-3" do |f| %>
          <div class="col-auto">
            <%= f.search_field :name_or_about_or_address_or_city_name_cont,
                               class: "form-control me-2", placeholder: "Buscar..." %>
          </div>
          <div class="col-auto">
            <%= f.submit class: "btn btn-outline-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>



