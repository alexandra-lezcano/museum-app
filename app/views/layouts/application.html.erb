<!DOCTYPE html>
<html lang="es">
<head>
  <title>MuseumApp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
</head>

<body>
<% user_signed_in = user_signed_in? %>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to t('global.menu.home'), root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to t('global.menu.museums_list'), museums_path, class: "nav-link" %>
        <%= link_to "Registrar Museo", new_museum_registration_request_path, class: "nav-link"  %>
        <% if user_signed_in %>
          <%= link_to t('global.menu.profile'), edit_user_registration_path, class: "nav-link" %>
          <%= link_to t('global.menu.registrations_request_list'), museum_registration_requests_path, class: "nav-link" %>
          <% if current_user.admin? %>
            <%= link_to t('devise.invitations.new.header'), new_user_invitation_path, class: "nav-link" %>
            <%= link_to t('global.menu.users_list'), users_path, class: "nav-link" %>
          <% end %>
        <% else %>
          <%= link_to t('devise.shared.links.sign_in'), new_user_session_path, class: "nav-link" %>
        <% end %>
      </div>
    </div>
    <% if user_signed_in %>
      <%= button_to t('global.menu.log_out'), destroy_user_session_path, method: :delete, class: "btn btn-secondary btn-sm" %>
    <% end %>
  </div>
</nav>

<div class="container mt-5">

  <div id="flash" class="flash">
    <%= render "layouts/flash" %>
  </div>

  <%= yield %>
  <p class="alert" style="color: red"><%= alert %></p>
</div>
</body>
</html>
