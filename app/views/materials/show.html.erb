<div class="container">
  <div class="d-flex bd-highlight align-items-center">
    <div class="p-2 flex-grow-1 bd-highlight">
      <%= link_to "", materials_path, class: "bi bi-arrow-left icon_back" %>
    </div>
  </div>
  <div class="d-flex bd-highlight align-items-center">
    <div class="p-2 flex-grow-1 bd-highlight">
      <h2><%= t(".title") %> </h2>
    </div>
    <div class="p-2 bd-highlight">
      <%= link_to "", edit_material_path(@material), class: "bi bi-pencil-fill icon_edit" %>
    </div>
    <div class="p-2 bd-highlight">
      <%= button_to t(".delete"), @material, method: :delete, class: "btn btn-outline-danger", form: { data: { turbo_confirm: "Estas seguro?" } } %>
    </div>
  </div>

  <div class="d-flex bd-highlight align-items-center">
    <ul id="<%= dom_id @material %>" class="list-unstyled">
      <li>
        <strong> <%= Material.human_attribute_name("name") %>:</strong>
        <%= @material.name %>
      </li>
    </ul>
  </div>
</div>