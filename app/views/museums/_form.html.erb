<% owner_or_admin = current_user && current_user.admin_or_museum_owner?(@museum) %>

<div class="row">
  <%= form_with(model: museum, class: "mt-3") do |form| %>
    <% if museum.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(museum.errors.count, "error") %> prohibited this museum from being saved:</h2>

        <ul>
          <% museum.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-sm-8 mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="col-sm-8 mb-3">
      <%= form.label :about, class: "form-label" %>
      <%= form.text_area :about, class: "form-control" %>
    </div>

    <div class="my-3">
      <h5>Información del Museo</h5>
      <div class="col-sm-8 mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control", placeholder: "correo@museo.com.py" %>
      </div>

      <div class="col-sm-8 mb-3">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, class: "form-control", placeholder: "+595 985 111 111" %>
      </div>

      <div class="col-sm-8 mb-3">
        <%= form.label :page, class: "form-label" %>
        <%= form.text_field :page, class: "form-control", placeholder: "https://museo.com.py" %>
      </div>

      <div class="col-sm-8 mb-3">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
    </div>
    <% if owner_or_admin %>
      <div class="my-3">
        <h5>Información Administrativa</h5>

        <div class="col-sm-8 mb-3">
          <%= form.label :code, class: "form-label" %>
          <%= form.text_field :code, class: "form-control" %>
        </div>
      </div>
    <% end %>

    <div class="col-sm-8 mb-3">
      <%= form.submit class: "btn btn-outline-secondary" %>
      <% button_to "Eliminar Museo", @user, method: :delete, class: "btn btn-outline-danger" %>
    </div>
  <% end %>
</div>