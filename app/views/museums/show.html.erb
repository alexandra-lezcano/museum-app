<% admin = current_user&.admin? ? true : false %>
<% owner_or_admin = current_user && current_user.admin_or_museum_owner?(@museum) %>

<div class="row">
  <div class="col">
    <%= link_to "", museums_path, class: "bi bi-arrow-left" %>
  </div>
  <% if owner_or_admin %>
    <div class="col-auto">
      <%= button_to "Hacer Privado",
                    update_museum_status_museum_path(@museum, museum_status: Museum::NOT_PUBLISHED),
                    method: :patch,
                    form: { data: { turbo_confirm: "Estas seguro?" } },
                    class: "btn btn-warning btn-sm" %>
    </div>
    <div class="col-auto">
      <%= button_to "Publicar",
                    update_museum_status_museum_path(@museum, museum_status: Museum::PUBLISHED),
                    method: :patch,
                    form: { data: { turbo_confirm: "Estas seguro?" } },
                    class: "btn btn-success btn-sm" %>
    </div>
    <div class="col text-end">
      <%= link_to "", edit_museum_path(@museum), class: "btn btn-outline-secondary bi bi-pencil-fill" %>
    </div>
  <% end %>
  <% if admin %>
    <div class="col-auto">
      <%= button_to "",
                    @museum, method: :delete,
                    class: "btn btn-outline-danger bi bi-trash3-fill",
                    form: { data: { turbo_confirm: "Are you sure?" } } %>
    </div>
  <% end %>
</div>
<div class="container-fluid">
  <%= image_tag("museum_top_placeholder.png", class: "img-fluid my-3") %>
</div>

<!-- Should improve the alignment by providing a custom class -->
<div class="row text-center">
  <div class="col museum_header" id="<%= dom_id @museum %>">
    <h2> <%= @museum.name %></h2>
  </div>
</div>

<!-- Should improve display of admin ingo-->
<% if owner_or_admin %>
  <div class="card mb-3">
    <h5 class="card-header">Información Administrativa</h5>

    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <strong>Estado:</strong> <%= t("activerecord.attributes.museum.museum_statuses.#{@museum.museum_status}") %>
        </li>
        <li class="list-group-item">
          <strong>Código:</strong> <%= @museum.code %>
        </li>
        <% if admin %>
          <% if @museum.museum_registration_request %>
            <li class="list-group-item">
              <strong>Solicitud de
                Registro:</strong> <%= link_to t("activerecord.attributes.museum.museum/museum_registration_request.id"), @museum.museum_registration_request %>
            </li>
          <% end %>
          <li class="list-group-item">
            <strong>Administrador:</strong> <%= link_to @museum.user.email, @museum.user %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12 py-3">
    <p> <%= @museum.about %> </p>
  </div>
</div>

<!-- Render the piece_collections/_piece_collection partial -->
<% if owner_or_admin %>
  <div class="row py-3">
    <div class="col "><h4>Colecciones</h4></div>
    <div class="col text-end">
      <%= link_to "Agregar coleccion",
                  new_museum_piece_collection_path(@museum),
                  class: "btn btn-outline-secondary",
                  data: { turbo_frame: dom_id(PieceCollection.new) } %>
    </div>
  </div>

  <!-- Empty tag that will be replaced with the New Form for the piece collection -->
  <%= turbo_frame_tag PieceCollection.new %>

  <div class="table-responsive mt-3">
    <table class="table">
      <thead class="table-light align-middle">
      <tr>
        <th scope="col"> Nombre</th>
        <th scope="col"> Actualizado el</th>
        <th scope="col"> Acciones</th>
      </tr>
      </thead>
      <tbody class="align-middle" id="collections_table">
      <% @piece_collections.each do |piece_collection| %>
        <%= render "piece_collections/piece_collection", piece_collection: piece_collection %>
      <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <h4 class="text-center">Explora Colecciones</h4>
  <div class="album py-5">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <% @piece_collections.each do |piece_collection| %>
          <%= render "piece_collections/piece_collection_gallery", piece_collection: piece_collection %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col">
    <strong> Visita el museo </strong>
    <p>
      <%= @museum.address %> <br>
      <%= @museum.phone %> <br>
      <%= @museum.email %> <br>
      <%= @museum.page %> <br>
    </p>
  </div>
  <div class="col">
    <strong>Horarios de atencion</strong>
    <p> todo - agregar horarios</p>
  </div>
  <div class="col">
    <strong>Accesibilidad</strong>
    <p> todo - agregar temas de accesibilidad, si tiene visitas guiadas, etc</p>
  </div>
</div>


